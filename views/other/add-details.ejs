<% 
let beds = [{type:'individual',status:false,beds:null},{type:'matrimonial',status:false,beds:null},{type:'queen size',status:false,beds:null},{type:'king size',status:false,beds:null}]

    for (let i = 0; i < obj.beds.length; i++) {

        for (let a = 0; a < beds.length; a++) {

            if ( obj.beds[i].type == beds[a].type) {

                beds[a].status = true;
                beds[a].beds = obj.beds[i].beds;
                
            }

        } 

    } 
%>

  <div class="w3-container">
    <h4><strong>The space</strong></h4>
    <div class="w3-row w3-large">
      <div class="w3-col s6">
        <label for="people"><i class="fa fa-fw fa-male"></i> Max people:<input type="number" name="occupancy" id="people" min="1" value="<%= obj.occupancy %>"></label>
        <label for="individual"><i class="fa fa-fw fa-bed"></i> individual:<input type="number" name="individual" id="individual" min="0" value="<%=(beds[0].status)? beds[0].beds : ''; %>"></label>
        <label for="matrimonial"><i class="fa fa-fw fa-bed"></i> matrimonial:<input type="number" name="matrimonial" id="matrimonial" min="0" value="<%=(beds[1].status)? beds[1].beds : ''; %>"></label>
      </div>
      <div class="w3-col s6">
        <label for="queen"><i class="fa fa-fw fa-bed"></i> queen size:<input type="number" name="queenSize" id="queen" min="0" value="<%=(beds[2].status)? beds[2].beds : ''; %>"></label>
        <label for="king"><i class="fa fa-fw fa-bed"></i> king size:<input type="number" name="kingSize" id="king" min="0" value="<%=(beds[3].status)? beds[3].beds : ''; %>"></label>
        <label for="Bathrooms"><i class="fa fa-fw fa-bath"></i> Bathrooms:<input type="number" name="Bathrooms" id="Bathrooms" min="0" value="<%= obj.bathRooms %>"></label>
      </div>
    </div>
    <hr>

    <h4><strong>Location</strong></h4>
    <div class="w3-row w3-large">
      <div class="w3-col s6">
        <label for="province"><i class="fa fa-fw fa-globe"></i> Province:<input class="w3-input w3-round-large" type="text" name="province" id="province" min="1" value="<%= obj.location.province %>"></label>
        <label for="city"><i class="fa fa-fw fa-university"></i> City:<input class="w3-input w3-round-large" type="text" name="city" id="city" min="0" value="<%= obj.location.city %>"></label>
        <label for="gps"><i class="fa fa-fw fa-map-marker"></i> GPS coordinates:Latitude<input type="number" name="gps" id="gps" min="0" value="<%= obj.location.gps[0] %>">Longitud<input type="number" name="gps" id="gps" min="0" value="<%= obj.location.gps[1] %>"></label>
      </div>
      <div class="w3-col s6">
        <label for="size"><i class="fa fa-fw fa-calculator"></i> Surface:<input type="number" name="apartmentSize" id="size" min="0" value="<%= obj.apartmentSize %>">m<sup>2</sup></label>
        <label for="price"><i class="fa fa-fw fa-money"></i> price per day: <i class="fa fa-eur"></i><input type="number" name="price" id="price" min="0" value="<%= obj.price %>"></label>
      </div>
    </div>
    <hr>
    
    <h4><strong>Rules Tags</strong></h4>
    <div class="w3-row w3-large">
      <div class="w3-col s6">
        <label for="smoking"><i class=" fa-fw fas fa-smoking-ban"></i> Smoking <input type="checkbox" name="smoking" id="smoking" <%=(obj.rulesTags.smoking)? 'checked' : '';%>></label>
        <label for="pets"><i class="fa fa-fw fa-paw"></i> Pets <input type="checkbox" name="pets" id="pets" <%=(obj.rulesTags.pets)? 'checked' : '';%>></label>
        <label for="eat"><i class="fas fa-fw fa-cookie-bite"></i> Eat <input type="checkbox" name="eat" id="eat" <%=(obj.rulesTags.eat)? 'checked' : '';%>></labelp>
        <label for="steal"><i class="fa fa-fw fa-user-secret"></i> Steal <input type="checkbox" name="steal" id="steal" <%=(obj.rulesTags.steal)? 'checked' : '';%>></labelp>
      </div>
      <div class="w3-col s6">
        <label for="parties"><i class="fas fa-fw fa-glass-cheers"></i> parties <input type="checkbox" name="parties" id="parties" <%=(obj.rulesTags.parties)? 'checked' : '';%>></label>
        <label for="kids"><i class="fa fa-fw fa-child"></i> Kids <input type="checkbox" name="kids" id="kids" <%=(obj.rulesTags.kids)? 'checked' : '';%>></label>
        <label for="arrivals"><i class="fa fa-fw fa-clock-o"></i> Arrivals <input type="checkbox" name="arrivals" id="arrivals" <%=(obj.rulesTags.arrivals)? 'checked' : '';%>></label>
      </div>
    </div>
    <hr>
    
    <h4><strong>Amenities</strong></h4>
    <div class="w3-row w3-large">
      <div class="w3-col s6">
        <label for="AC"><i class="fa fa-fw fa-snowflake-o" aria-hidden="true"></i> Shower <input type="checkbox" name="AC" id="AC" <%=(obj.services.AC)? 'checked' : '';%>></label>
        <label for="wifi"><i class="fa fa-fw fa-wifi"></i> WiFi <input type="checkbox" name="wifi" id="wifi" <%=(obj.services.wifi)? 'checked' : '';%>></label>
        <label for="TV"><i class="fa fa-fw fa-tv"></i> TV <input type="checkbox" name="TV" id="TV" <%=(obj.services.TV)? 'checked' : '';%>></labelp>
      </div>
      <div class="w3-col s6">
        <label for="kitchen"><i class="fas fa-fw fa-utensils"></i> Kitchen <input type="checkbox" name="kitchen" id="kitchen" <%=(obj.services.kitchen)? 'checked' : '';%>></label>
        <label for="heating"><i class="fa fa-fw fa-thermometer"></i> Heating <input type="checkbox" name="heating" id="heating" <%=(obj.services.heating)? 'checked' : '';%>></label>
        <label for="reducedMobility"><i class="fa fa-fw fa-wheelchair"></i> Accessible <input type="checkbox" name="reducedMobility" id="reducedMobility" <%=(obj.services.reducedMobility)? 'checked' : '';%>></label>
      </div>
    </div>
    <hr>
    
    <label for="description"></label><h4><strong>Extra Info</strong></h4></lable>
    <textarea class="w3-input w3-round-large w3-hover-light-green"  name="description" id="description" placeholder="Description of the apartment"><%= obj.description%></textarea>
    <hr>
    <label for="rulesDescription"></label><h4><strong>Rules</strong></h4></lable>
    <textarea class="w3-input w3-round-large w3-hover-light-green"  name="rulesDescription" id="rulesDescription" placeholder="Rules of use of the apartment"><%= obj.rulesDescription%></textarea>
    <p><button class="w3-button w3-green w3-third" onclick="document.getElementById('subscribe').style.display='block'">Subscribe</button></p>
  </div>
  <hr>

  <!-- Subscribe Modal -->
<div id="subscribe" class="w3-modal">
  <div class="w3-modal-content w3-animate-zoom w3-padding-large">
    <div class="w3-container w3-white w3-center">
      <i onclick="document.getElementById('subscribe').style.display='none'" class="fa fa-remove w3-button w3-xlarge w3-right w3-transparent"></i>
      <h2 class="w3-wide">WAIT FOR THE ANSWER</h2>
      <H3 id="RESPONSE"></H3>
      
      <button type="button" class="w3-button w3-padding-large w3-green w3-margin-bottom" onclick="document.getElementById('subscribe').style.display='none'">Subscribe</button>
    </div>
  </div>
</div>
    
