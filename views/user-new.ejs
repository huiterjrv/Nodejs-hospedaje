    <script>
        if (!(sessionStorage.getItem("USER"))) {
            window.location.href = '/locoNoInventes';
        } else {
            let login = sessionStorage.getItem("USER")
            login = JSON.parse(login)
            let input = document.querySelector('input[type=hidden]#id').value
            if(login._id != input) {
                window.location.href = '/locoNoInventes';
            }
        }
    </script>
