                <label for="matrimonial"><i class="fa fa-fw fa-bed"></i> matrimonial:<input type="number" name="matrimonial" id="matrimonial" min="0"></label>
                </div>
                <div class="w3-col s6">
                <label for="queen"><i class="fa fa-fw fa-bed"></i> queen size:<input type="number" name="queenSize" id="queen" min="0"></label>
                <label for="king"><i class="fa fa-fw fa-bed"></i> king size:<input type="number" name="kingSize" id="king" min="0"></label>
                <label for="Bathrooms"><i class="fa fa-fw fa-bath"></i> Bathrooms:<input type="number" name="Bathrooms" id="Bathrooms" min="0"></label>
                </div>
            </div>
            <hr>
        
            <h4><strong>Location</strong></h4>
            <div class="w3-row w3-large">
                <div class="w3-col s6">
                <label for="province"><i class="fa fa-fw fa-globe"></i> Province:<input class="w3-input w3-round-large" type="text" name="province" id="province" min="1"></label>
